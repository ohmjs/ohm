{
  "name": "@ohm-js/compiler",
  "version": "18.0.0-alpha.1",
  "description": "Compile Ohm.js grammars to WebAsssembly",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./compat": {
      "types": "./dist/src/compat.d.ts",
      "default": "./dist/src/compat.js"
    }
  },
  "bin": {
    "ohm2wasm": "dist/src/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "publishConfig": {
    "directory": "dist-publish",
    "access": "public"
  },
  "scripts": {
    "build": "make",
    "build-and-test": "make && ava test",
    "prepack": "make && node scripts/prepare-publish.mjs",
    "test": "ava test"
  },
  "type": "module",
  "keywords": [],
  "author": "Patrick Dubroy <pdubroy@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@shopify/liquid-html-parser": "github:pdubroy/theme-tools#path:/packages/liquid-html-parser",
    "@thi.ng/leb128": "^3.1.48",
    "assemblyscript": "^0.27.36",
    "ava": "^6.2.0",
    "esbuild": "^0.25.5",
    "fast-check": "^4.2.0",
    "fast-glob": "^3.3.3",
    "mitata": "^1.0.34",
    "wabt": "1.0.37-nightly.20250428"
  },
  "dependencies": {
    "@ohm-js/runtime": "workspace:^",
    "@wasmgroundup/emit": "^1.0.2",
    "ohm-js": "workspace:^"
  }
}
